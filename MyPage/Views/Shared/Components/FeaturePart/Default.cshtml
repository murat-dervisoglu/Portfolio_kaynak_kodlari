@using EntityLayer.Concrete
@model List<Feature>

<div class="cover-bg p-3 p-lg-4 text-white" id="feature">
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-lg-4 col-md-5">
				<div class="avatar hover-effect bg-white shadow-sm p-1"><img src="@item.ImageUrl" width="190" height="200" style="filter:none" /></div>
			</div>
			<div class="col-lg-8 col-md-7 text-center text-md-start">
				<h2 class="h1 mt-2" data-aos="fade-left" data-aos-delay="0">@item.Name @item.Surname</h2>
				<p data-aos="fade-left" data-aos-delay="0">@item.Title</p>
				<a href="/Page/Index/" data-aos="fade-left" data-aos-delay="700" style="color:white"><b>Sayfa Olarak Gör</b></a>
				<div class="d-print-none" >				
					<br />
					@await Component.InvokeAsync("SocialMediaPart")				
				</div>
			</div>
		}
	</div>
</div>
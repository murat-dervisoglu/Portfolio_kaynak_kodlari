@using EntityLayer.Concrete
@model List<Experience>

<div class="work-experience-section px-3 px-lg-4" id="experience">
    <h2 class="h3 mb-4">Deneyimler</h2>
    <div class="timeline">
        @foreach (var item in Model)
        {
            <div class="timeline-card timeline-card-success card shadow-sm">
                <div class="card-body">
                    <div class="h5 mb-1"> @item.Name <span class="text-muted h6">@item.Position</span></div>
                    <div class="text-muted text-small mb-2">@item.StartDate - @item.FinishDate</div>
                    <div>@item.Description</div>
                </div>
            </div>
        }       
    </div>
</div>
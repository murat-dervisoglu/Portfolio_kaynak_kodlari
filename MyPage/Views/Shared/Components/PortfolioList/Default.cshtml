@using EntityLayer.Concrete
@model List<Portfolio>

<div class="card card-secondary" id="portfolios">
	<div class="card-header">
		<h3 class="card-title">Projeler </h3>
	</div>
	<div class="card-body">
		<div class="tab-content">
			<div class="timeline timeline-inverse">
				@foreach (var item in Model)
				{
					<div>
						<div class="timeline-item">
							<h4 class="timeline-header"><b class="text-primary">@item.PortfolioName </b></h4>
							<div class="timeline-body">
								@item.Description
								<br />
								<a href="@item.ProjectUrl">Projeye ait kodları görmek için tıklayın</a>
							</div>
							<div class="row mt-3">
								<div class="col-3">
									<a href="@item.ProjectUrl">
										<img src="@item.ImageUrl1" class="img-fluid rounded">
									</a>
								</div>
								<div class="col-3">
									<a href="@item.ProjectUrl">
										<img src="@item.ImageUrl2" class="img-fluid rounded">
									</a>
								</div>
								<div class="col-3">
									<a href="@item.ProjectUrl">
										<img src="@item.ImageUrl3" class="img-fluid rounded">
									</a>
								</div>
								<div class="col-3">
									<a href="@item.ProjectUrl">
										<img src="@item.ImageUrl4" class="img-fluid rounded">
									</a>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
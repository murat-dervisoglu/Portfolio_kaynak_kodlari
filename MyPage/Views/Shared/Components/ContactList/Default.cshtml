@model MyPage.Models.MailRequest

<div class="card card-secondary" id="contacts">
    <div class="card-header">
        <h3 class="card-title">İletişim</h3>
    </div>
    <div class="card-body">
        <div class="tab-content">
				<form class="form-horizontal" method="post">
					<div class="form-group row">
						<label asp-for="Name" class="col-sm-2 col-form-label">Adınız *</label>
						<div class="col-sm-10">
							<input type="text" asp-for="Name" class="form-control"required>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="Surname" class="col-sm-2 col-form-label">Soyadınız *</label>
						<div class="col-sm-10">
							<input type="text" asp-for="Surname" class="form-control" required>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="Phone" class="col-sm-2 col-form-label">Telefon Numaranız </label>
						<div class="col-sm-10">
							<input type="text" asp-for="Phone" class="form-control" >
						</div>
					</div>
						<div class="form-group row">
						<label asp-for="SenderMail" class="col-sm-2 col-form-label">E-Posta Adesininiz *</label>
						<div class="col-sm-10">
							<input asp-for="SenderMail" type="text" class="form-control" required>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="Subject" class="col-sm-2 col-form-label">Konu *</label>
						<div class="col-sm-10">
							<input type="text" asp-for="Subject" class="form-control" required>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="Content" class="col-sm-2 col-form-label">Mesajınız *</label>
						<div class="col-sm-10">
							<textarea asp-for="Content" class="form-control" required rows="4"></textarea>
						</div>
					</div>
					<div class="form-group row">
						<div class="offset-sm-2 col-sm-10">
							<button type="submit" class="btn btn-primary">Gönder</button>
							* İşaretlemesi Zorunlu Alan
						</div>
					</div>
				</form>
        </div>
    </div>
</div>
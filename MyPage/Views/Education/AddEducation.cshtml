@model EntityLayer.Concrete.Education
@{
    ViewData["Title"] = "AddEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-header border-0">
			<h4 class="mb-0">Yeni Eğitim Ekle</h4>
		</div>
            <div class="card-body">
			<form class="form-group" method="post" asp-action="AddEducation" asp-controller="Education">
                    <div class="form-group">
                        <label>Okul</label>
                        <input type="text" class="form-control" asp-for="School">
                    </div>
                    <div class="form-group">
                        <label>Bölüm</label>
                        <input type="text" class="form-control" asp-for="Section">
                    </div>
                    <div class="form-group">
                        <label>Başlama Tarihi</label>
                        <input type="text" class="form-control" asp-for="StartDate">
                    </div>
                    <div class="form-group">
                        <label>Bitirme Tarihi</label>
                        <input type="text" class="form-control" asp-for="FinishDate">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" name="Description" rows="2"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button type="button" class="btn btn-dark" onclick="history.back()">Geri</button>
                </form>
            </div>
        </div>
    </div>
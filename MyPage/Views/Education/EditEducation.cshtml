@model EntityLayer.Concrete.Education

@{
    ViewData["Title"] = "EditEducation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<form class="form-group" asp-action="EditEducation" asp-controller="Education" method="post">
			<div class="card-header border-0">
				<h4 class="mb-0">Eğitimini Güncelle</h4>
			</div>
			<div class="card-body">
				@Html.HiddenFor(x => x.EducationID)
				<div class="form-group">
					<label>Okul</label>
					@Html.TextBoxFor(x => x.School, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Bölüm </label>
					@Html.TextBoxFor(x => x.Section, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Başlangıç Tarihi</label>
					@Html.TextBoxFor(x => x.StartDate, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Bitirme Tarihi</label>
					@Html.TextBoxFor(x => x.FinishDate, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Açıklama</label>
					@Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
				</div>
				<button type="submit" class="btn btn-primary mr-2">Kaydet</button>
				<button type="button" class="btn btn-light" onclick="history.back()">Geri</button>
			</div>
		</form>
	</div>
</div>
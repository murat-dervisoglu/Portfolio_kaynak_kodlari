@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
	<div class="container">
		<div class="cover shadow-lg bg-white" style="width:1200px">
			<div class="education-section px-3 px-lg-4 pb-4">
				<h2 class="h3 mb-4">Projeler</h2>
				<div class="timeline">
					@foreach (var item in Model)
					{
						<div class="timeline-card timeline-card-success card shadow-sm shadow-lg">
							<div class="card-body ">
								<div class="h5 mb-1"><b>@item.PortfolioName</b></div>
								<div>@item.Description</div>
								<div class="row mt-3">
									<div class="col-3">
										<img src="@item.ImageUrl1" class="img-fluid rounded" alt="Portfolio Image 1">
									</div>
									<div class="col-3">
										<img src="@item.ImageUrl2" class="img-fluid rounded" alt="Portfolio Image 2">
									</div>
									<div class="col-3">
										<img src="@item.ImageUrl3" class="img-fluid rounded" alt="Portfolio Image 3">
									</div>
									<div class="col-3">
										<img src="@item.ImageUrl4" class="img-fluid rounded" alt="Portfolio Image 4">
									</div>
								</div>
								<div class="row-cols-2 mt-2">
									<a href="@item.ProjectUrl" class="btn btn-outline-warning"><b>Adrese Git</b></a>
									<a href="/Portfolio/EditPortfolio/@item.PortfolioID/" class="btn btn-outline-primary"><b>Güncelle</b></a>
									<a href="/Portfolio/DeletePortfolio/@item.PortfolioID/" class="btn btn-outline-danger" onclick="return confirm('Kalıcı Olarak Silmek İstediğinize Emin misiniz?');"><b>Sil</b></a>
								</div>
							</div>
						</div>
					}
				</div>
				<a href="/Portfolio/AddPortfolio/" class="btn btn-success"><b>Proje Ekle</b></a>
			</div>
		</div>
	</div>
</div>
<script src="~/right-resume_free_1-2-0/scripts/bootstrap.bundle.min.js?ver=1.2.0"></script>
<script src="~/right-resume_free_1-2-0/scripts/aos.js?ver=1.2.0"></script>
<script src="~/right-resume_free_1-2-0/scripts/main.js?ver=1.2.0"></script>
@model MyPage.Models.EditPortfolioViewModel

@{
	ViewData["Title"] = "AddPortfolio";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-header border-0">
			<h4 class="mb-0">Yeni Proje Ekle</h4>
		</div>
		<div class="card-body">
			<form class="form-group" method="post" asp-action="AddPortfolio" asp-controller="Portfolio" enctype="multipart/form-data">
				<div class="form-group">
					<label>Proje Adı</label>
					<input type="text" class="form-control" asp-for="PortfolioName">
				</div>
				<div class="form-group">
					<label>Proje GitHub Adresi</label>
					<input type="text" class="form-control" asp-for="ProjectUrl">
				</div>
				<div class="form-group">
					<label>Açıklama</label>
					<textarea class="form-control" name="Description" rows="2"></textarea>
				</div>
				<div class="form-group">
					<label> Birinci Görsel Alanı</label>
					<input type="file" asp-for="ImageUrl1">
				</div>
				<div class="form-group">
					<label>İkinci Görsel Alanı</label>
					<input type="file" asp-for="ImageUrl2">
				</div>
				<div class="form-group">
					<label>Üçüncü Görsel Alanı</label>
					<input type="file" asp-for="ImageUrl3">
				</div>
				<div class="form-group">
					<label>Dördüncü Görsel Alanı</label>
					<input type="file" asp-for="ImageUrl4">
				</div>
				<button type="submit" class="btn btn-primary mr-2">Kaydet</button>
				<button type="button" class="btn btn-dark" onclick="history.back()">Geri</button>
			</form>
		</div>
	</div>
</div>
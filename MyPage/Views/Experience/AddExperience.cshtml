@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h4 class="mb-0">Yeni Deneyim Ekle</h4>
        </div>
        <div class="card-body">
            <form class="form-group" method="post"  asp-action="AddExperience" asp-controller="Experience">
                <div class="form-group">
                    <label>Kurum Adı</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label>Pozisyon</label>
                    <input type="text" class="form-control" asp-for="Position">
                </div>
                <div class="form-group">
                    <label>Başlama Tarihi</label>
                    <input type="text" class="form-control" asp-for="StartDate">
                </div>
                <div class="form-group">
                    <label>Ayrılma Tarihi</label>
                    <input type="text" class="form-control" asp-for="FinishDate">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea class="form-control" name="Description" rows="2"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-dark" onclick="history.back()">Geri</button>
            </form>
        </div>
    </div>
</div>
@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "EditAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
	<div class="card">
		<form class="form-group" asp-action="EditAbout" asp-controller="About" method="post" >
			<div class="card-header border-0">
				<h4 class="mb-0">Hakkımda Alanını Güncelle</h4>
			</div>
			<div class="card-body">
				@Html.HiddenFor(x => x.AboutID)
				<div class="form-group">
					<label>Biyografi</label>
					@Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Adres</label>
					@Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Telefon </label>
					@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>E-Posta</label>
					@Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
				</div>
				<div class="form-group">
					<label>Doğum Tarihi</label>
					@Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control" })
				</div>
				<button type="submit" class="btn btn-primary mr-2">Kaydet</button>
				<button type="button" class="btn btn-light" onclick="history.back()">Geri</button>
			</div>
		</form>
	</div>
</div>
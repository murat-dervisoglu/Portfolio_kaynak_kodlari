@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-header border-0">
            <h4 class="mb-0">Yeni Referans Ekle</h4>
        </div>
        <div class="card-body">
            <form class="form-group" method="post" asp-action="AddTestimonial" asp-controller="Testimonial">
                <div class="form-group">
                    <label>Referans Adı</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <div class="form-group">
                    <label>Soyadı</label>
                    <input type="text" class="form-control" asp-for="SurName">
                </div>
                <div class="form-group">
                    <label>E-Posta Adresi </label>
                    <input type="text" class="form-control" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label>Açıklama </label>
                    <textarea class="form-control" name="Description" rows="2"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="button" class="btn btn-dark" onclick="history.back()">Geri</button>
            </form>
        </div>
    </div>
</div>